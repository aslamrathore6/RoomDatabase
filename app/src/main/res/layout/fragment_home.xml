<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


    <Button
        android:id="@+id/bn_add_user"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Add User"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bn_view_user"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="View User"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_add_user" />


    <Button
        android:id="@+id/bn_delete_user"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Delete User"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_view_user" />


    <Button
        android:id="@+id/bn_update_user"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Update User"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_delete_user" />

</androidx.constraintlayout.widget.ConstraintLayout>